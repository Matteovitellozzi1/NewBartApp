<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisualizzaProdotto"
    android:padding="40dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/immagine_oggetto1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="12dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nome_oggetto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/nome_venditore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/prezzo_stringa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prezzo:  "
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/prezzo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_offerta"
            android:text="Formula Offerta"/>

</LinearLayout>